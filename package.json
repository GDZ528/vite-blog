{
  "name": "kunlun-market",
  "version": "1.0.0",
  "author": "yunfeng",
  "license": "MIT",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "dev:admin": "yarn workspace admin dev",
    "dev:frontend": "yarn workspace frontend dev",
    "dev:backend": "yarn workspace backend dev",
    "test": "turbo run test",
    "pre-commit": "lint-staged && turbo run test",
    "test:ui": "yarn workspace ui test",
    "lint:ui": "yarn workspace ui lint"
  },
  "dependencies": {
    "eslint-config-turbo": "latest"
  },
  "devDependencies": {
    "turbo": "^1.9.3",
    "eslint": "^8.23.0",
    "prettier": "^2.7.1",
    "eslint-config-custom": "*",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "tsconfig": "*"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "printWidth": 120,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "lint-staged": {
    "apps/admin/src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --config apps/admin/.eslintrc.cjs --quiet",
      "prettier --write"
    ],
    "apps/frontend/src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --config apps/frontend/.eslintrc.cjs --quiet",
      "prettier --write"
    ],
    "packages/ui/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --config packages/ui/.eslintrc.cjs --quiet",
      "prettier --write"
    ],
    "packages/public-utils/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --config packages/public-utils/.eslintrc.cjs --quiet",
      "prettier --write"
    ],
    "packages/yhooks/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --config packages/yhooks/.eslintrc.cjs --quiet",
      "prettier --write"
    ],
    "apps/backend/{src,apps,libs,test}/**/*.ts": [
      "eslint --fix --config apps/backend/.eslintrc.js --quiet",
      "prettier --write"
    ],
    "*.{json,md,yaml}": [
      "prettier --write"
    ]
  }
}
